@model Stozer

@{
    ViewBag.Title = "Ažuriranje stožera";
}

<form asp-action="Edit"
      asp-route-id="@Model.SifraStozera"
      asp-route-page="@ViewBag.Page"
      asp-route-sort="@ViewBag.Sort"
      asp-route-ascending="@ViewBag.Ascending"
      method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Naziv"></label>
        <div><span asp-validation-for="Naziv" class="text-danger"></span></div>
        <input asp-for="Naziv" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IdPredsjednika"></label>
        <div><span asp-validation-for="IdPredsjednika" class="text-danger"></span></div>
        <select class="form-control" asp-for="IdPredsjednika" asp-items="ViewBag.Osobe">
            <option disabled selected value="">Odaberite osobu</option>
        </select>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Spremi</button>
        <a asp-action="Index"
           asp-route-page="@ViewBag.Page"
           asp-route-sort="@ViewBag.Sort"
           asp-route-ascending="@ViewBag.Ascending"
           class="btn btn-secondary">Odustani</a>
    </div>
</form>