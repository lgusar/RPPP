@model Stozer

@{
    ViewBag.Title = "Novi stožer";
}

<h2>Unos novog stožera</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="SifraStozera"></label>
        <div><span asp-validation-for="SifraStozera" class="text-danger"></span></div>
        <input asp-for="SifraStozera" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Naziv"></label>
        <div><span asp-validation-for="Naziv" class="text-danger"></span></div>
        <input asp-for="Naziv" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IdPredsjednika"></label>
        <div><span asp-validation-for="IdPredsjednika" class="text-danger"></span></div>
        <select class="form-control" asp-for="IdPredsjednika" asp-items="ViewBag.Osobe">
            <option disabled selected value="">Odaberite osobu</option>
        </select>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Dodaj</button>
        <a asp-action="Index" class="btn btn-secondary">Odustani</a>
    </div>
</form>