@model Sastanak

@{
    ViewBag.Title = "Ažuriranje sastanka";
}

<form asp-action="Edit"
      asp-route-id="@Model.SifraSastanka"
      asp-route-page="@ViewBag.Page"
      asp-route-sort="@ViewBag.Sort"
      asp-route-ascending="@ViewBag.Ascending"
      method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="SifraStozera"></label>
        <div><span asp-validation-for="SifraStozera" class="text-danger"></span></div>
        <select class="form-control" asp-for="SifraStozera" asp-items="ViewBag.Stozeri">
            <option disabled selected value="">Odaberite stožer</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Datum"></label>
        <div><span asp-validation-for="Datum" class="text-danger"></span></div>
        <input asp-for="Datum" class="form-control" />
    </div>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Spremi</button>
        <a asp-action="Index"
           asp-route-page="@ViewBag.Page"
           asp-route-sort="@ViewBag.Sort"
           asp-route-ascending="@ViewBag.Ascending"
           class="btn btn-secondary">Odustani</a>
    </div>
</form>