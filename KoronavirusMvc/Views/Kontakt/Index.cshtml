@model KoronavirusMvc.ViewModels.KontaktiViewModel

@{
    ViewData["Title"] = "Popis osoba s kojima su bile u kontaktu";
}

    <a asp-action="Create">Dodaj novi kontakt</a>

    <pager page-info="@Model.PagingInfo" page-action="Index" page-title="Unesite željenu stranicu"
           class="float-right">
    </pager>

<table class="table table-sm table-striped table-hover" id="tablekontakt">
    <thead>
        <tr>
            <th>
                <a asp-route-sort="1"
                   asp.route-page="@Model.PagingInfo.CurrentPage"
                   asp-route-ascending="@( Model.PagingInfo.Sort ==1 ? !Model.PagingInfo.Ascending : true)">Identifikacijski broj osobe</a>
            </th>
            <th>
                <a asp-route-sort="2"
                   asp.route-page="@Model.PagingInfo.CurrentPage"
                   asp-route-ascending="@( Model.PagingInfo.Sort ==2 ? !Model.PagingInfo.Ascending : true)">Ime osobe</a>
            </th>
            <th>
                <a asp-route-sort="3"
                   asp.route-page="@Model.PagingInfo.CurrentPage"
                   asp-route-ascending="@( Model.PagingInfo.Sort ==3 ? !Model.PagingInfo.Ascending : true)">Prezime osobe</a>
            </th>
            <th>
                <a asp-route-sort="4"
                   asp.route-page="@Model.PagingInfo.CurrentPage"
                   asp-route-ascending="@( Model.PagingInfo.Sort ==4 ? !Model.PagingInfo.Ascending : true)">Identifikacijski broj osobe k kojom je bila u kontaktu</a>
            </th>
            <th>
                <a asp-route-sort="5"
                   asp.route-page="@Model.PagingInfo.CurrentPage"
                   asp-route-ascending="@( Model.PagingInfo.Sort ==2 ? !Model.PagingInfo.Ascending : true)">Ime osobe s kojom je bila u kontaktu</a>
            </th>
            <th>
                <a asp-route-sort="6"
                   asp.route-page="@Model.PagingInfo.CurrentPage"
                   asp-route-ascending="@( Model.PagingInfo.Sort ==2 ? !Model.PagingInfo.Ascending : true)">Prezime osobe s kojom je bila u kontaktu</a>
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var kontakt in Model.Kontakti)
        {
        <tr>
            <td class="text-left">@kontakt.IdOsobaNavigation.IdentifikacijskiBroj</td>
            <td class="text-left">@kontakt.IdOsobaNavigation.Ime</td>
            <td class="text-left">@kontakt.IdOsobaNavigation.Prezime</td>
            <td class="text-left">@kontakt.IdKontaktNavigation.IdentifikacijskiBroj</td>
            <td class="text-left">@kontakt.IdKontaktNavigation.Ime</td>
            <td class="text-left">@kontakt.IdKontaktNavigation.Prezime</td>
            <td class="btn-group">

                <form asp-action="Delete" method="post"
                      asp-route-idOsoba="@kontakt.IdOsoba"
                      asp-route-idKontakt="@kontakt.IdKontakt"
                      asp-route-page="@Model.PagingInfo.CurrentPage"
                      asp-route-sort="@Model.PagingInfo.Sort"
                      asp-route-ascending="@Model.PagingInfo.Ascending">
                    @*<input type="hidden" name="id1" value="@kontakt.IdOsoba" />*@
                    <button type="submit" class="btn btn-sm btn-danger delete" title="Obriši"><i class="fas fa-trash-alt"></i></button>
                </form>

            </td>
        </tr>
        }
    </tbody>
</table>

