@model Organizacija

@{ 
    ViewBag.Title = "Ažuriranje organizacije";
}

    <form
          asp-route-page = "@ViewBag.Page"
          asp-route-ascending = "@ViewBag.Ascending"
          asp-route-sort = "@ViewBag.Sort"
          method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="SifraOrganizacije"></label>
            <div><span asp-validation-for="SifraOrganizacije" class="text-danger"></span></div>
            <input asp-for="SifraOrganizacije" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Naziv"></label>
            <div><span asp-validation-for="Naziv" class="text-danger"></span></div>
            <input asp-for="Naziv" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Url"></label>
            <div><span asp-validation-for="Url" class="text-danger"></span></div>
            <input asp-for="Url" class="form-control" />
        </div>
        <div class="text-center">
             <button class="btn btn-primary" type="submit">Spremi</button>
            <a asp-action="Index"
               asp-route-page = "@ViewBag.Page"
               asp-route-ascending = "@ViewBag.Ascending"
               asp-route-sort = "@ViewBag.Sort"
            class="btn btn-secondary">Odustani</a>
        </div>
    </form>

