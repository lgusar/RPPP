@model IEnumerable<Osoba>

    @{
    ViewData["Title"] = "Popis osoba";
    }

    <table class="table table-sm table-striped table-hover" id="tableosobe">
        <thead>
            <tr>
                <th>Identifikacijski broj</th>
                <th>Ime</th>
                <th>Prezime</th>
                <th>Adresa</th>
                <th>Datum rođenja</th>
                <th>Zanimanje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var osoba in Model)
        {
            <tr>
                <td class="text-left">@osoba.IdentifikacijskiBroj</td>
                <td class="text-left">@osoba.Ime</td>
                <td class="text-left">@osoba.Prezime</td>
                <td class="text-left">@osoba.Adresa</td>
                <td class="text-left">@osoba.DatRod</td>
                <td class="text-left">@osoba.Zanimanje</td>
            </tr>
        }
        </tbody>
    </table>

    @section styles{
        <link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/js/jquery.bootstrap4.min.css" />
        }

    @section scripts{
        <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.10.20/js/jquery.bootstrap4.min.js"></script>
        <script>
            $(document).ready(function () {
                $('#tableosobe').DataTable({
                    language: {
                        search: "Pretraga",
                        info: "_START_ -  _END_  (ukupno _TOTAL_)",
                        lengthMenu: "Prikaži  _MENU_  zapisa",
                        paginate: {
                            first: "Prva ",
                            previous: "Prethodna ",
                            next: " Sljedeća ",
                            last: "Posljednja "
                        },
                        emptyTable: "Nema podataka za prikaz",
                        info: "_START_ - _END_ od ukupno _TOTAL_ zapisa",
                        infoEmpty: "Nema podataka za prikaz",
                        infoFiltered: "(filtrirano od ukupno _MAX_ zapisa)",
                    }
                });
            });
        </script>
    }

