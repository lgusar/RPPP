@model Osoba

@{
    ViewBag.Title = "Ažuriranje osobe";
}
    <form asp-route-page="@ViewBag.Page"
          asp-route-sort="@ViewBag.Sort"
          asp-route-ascending="@ViewBag.Ascending"
          asp-action="Edit"
          method="post">
        <div asp-validation-summary="All"></div>

        <div class="form-group">
            <label asp-for="Ime"></label>
            <div><span asp-validation-for="Ime" class="text-danger"></span></div>
            <input asp-for="Ime" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Prezime"></label>
            <div><span asp-validation-for="Prezime" class="text-danger"></span></div>
            <input asp-for="Prezime" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Adresa"></label>
            <div><span asp-validation-for="Adresa" class="text-danger"></span></div>
            <input asp-for="Adresa" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="DatRod"></label>
            <div><span asp-validation-for="DatRod" class="text-danger"></span></div>
            <input asp-for="DatRod" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Zanimanje"></label>
            <div><span asp-validation-for="Zanimanje" class="text-danger"></span></div>
            <input asp-for="Zanimanje" class="form-control" />
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Spremi</button>
        </div>
        <a asp-action="Index"
           asp-route-page="@ViewBag.Page"
            asp-route-sort="@ViewBag.Sort"
            asp-route-ascending="@ViewBag.Ascending"
           class="btn btn-secondary">Odustani</a>
    </form>

