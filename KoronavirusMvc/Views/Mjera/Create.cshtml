@model Mjera

@{
    ViewBag.Title = "Nova mjera";
}

<h2>Unos nove mjere</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="SifraMjere"></label>
        <div><span asp-validation-for="SifraMjere" class="text-danger"></span></div>
        <input asp-for="SifraMjere" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SifraSastanka"></label>
        <div><span asp-validation-for="SifraSastanka" class="text-danger"></span></div>
        <select class="form-control" asp-for="SifraSastanka" asp-items="ViewBag.Sastanci">
            <option disabled selected value="">Odaberite sastanak</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="SifraPrethodneMjere"></label>
        <div><span asp-validation-for="SifraPrethodneMjere" class="text-danger"></span></div>
        <select class="form-control" asp-for="SifraPrethodneMjere" asp-items="ViewBag.Mjere">
            <option disabled selected value="">Odaberite prethodnu mjeru</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Opis"></label>
        <div><span asp-validation-for="Opis" class="text-danger"></span></div>
        <input asp-for="Opis" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Datum"></label>
        <div><span asp-validation-for="Datum" class="text-danger"></span></div>
        <input asp-for="Datum" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="VrijediDo"></label>
        <div><span asp-validation-for="VrijediDo" class="text-danger"></span></div>
        <input asp-for="VrijediDo" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Dodaj</button>
        <a asp-action="Index" class="btn btn-secondary">Odustani</a>
    </div>
</form>