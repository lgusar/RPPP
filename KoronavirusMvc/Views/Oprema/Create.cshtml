@model Oprema

@{ ViewBag.Title = "Nova Oprema";
}

<h2>Unos nove opreme</h2>
<form asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="SifraInstitucije"></label>
        <div><span asp-validation-for="SifraInstitucije" class="text-danger"></span></div>
        <select class="form-control" asp-for="SifraInstitucije" asp-items="ViewBag.Institucije">
            <option selected value="" disabled>Odaberite instituciju</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="NazivOpreme"></label>
        <div><span asp-validation-for="NazivOpreme" class="text-danger"></span></div>
        <input asp-for="NazivOpreme" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="KolicinaOpreme"></label>
        <div><span asp-validation-for="KolicinaOpreme" class="text-danger"></span></div>
        <input asp-for="KolicinaOpreme" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Dodaj</button>
        <a asp-action="Index" class="btn btn-secondary">Odustani</a>
    </div>
</form>

