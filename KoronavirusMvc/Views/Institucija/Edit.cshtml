@model Institucija

@{ 
    ViewBag.Title = "Ažuriranje institucije";
}

    <form
          asp-route-page = "@ViewBag.Page"
          asp-route-ascending = "@ViewBag.Ascending"
          asp-route-sort = "@ViewBag.Sort"
          method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="NazivInstitucije"></label>
            <div><span asp-validation-for="NazivInstitucije" class="text-danger"></span></div>
            <input asp-for="NazivInstitucije" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="RadnoVrijeme"></label>
            <div><span asp-validation-for="RadnoVrijeme" class="text-danger"></span></div>
            <input asp-for="RadnoVrijeme" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Kontakt"></label>
            <div><span asp-validation-for="Kontakt" class="text-danger"></span></div>
            <input asp-for="Kontakt" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="SifraOrganizacije"></label>
            <div><span asp-validation-for="SifraOrganizacije" class="text-danger"></span></div>
            <select class="form-control" asp-for="SifraOrganizacije" asp-items="ViewBag.Organizacije">
                <option selected value="" disabled>Odaberite šifru organizacije</option>
            </select>
        </div>
        <div class="text-center">
             <button class="btn btn-primary" type="submit">Spremi</button>
            <a asp-action="Index"
               asp-route-page = "@ViewBag.Page"
               asp-route-ascending = "@ViewBag.Ascending"
               asp-route-sort = "@ViewBag.Sort"
            class="btn btn-secondary">Odustani</a>
        </div>
    </form>

