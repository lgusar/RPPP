@model Drzava

    <form asp-action="Create" method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="SifraDrzave"> Šifra države</label>
            <input asp-for="SifraDrzave" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ImeDrzave"> Ime države</label>
            <input asp-for="ImeDrzave" class="form-control" />
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Dodaj</button>
            <a asp-action="Index" class="btn btn-secondary"> Odustani</a>
        </div>
    </form>
