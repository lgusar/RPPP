@model KoronavirusMvc.ViewModels.ZarazeneOsobeViewModel

@{
    ViewBag.Title = "Popis zaraženih osoba";
}

    <a asp-action="Create">Dodaj novozaraženu osobu</a>

<table class="table table-sm table-striped table-hover" id="tablezarazena">
    <thead>
        <tr>
            <th>
                <a asp-route-sort="1"
                   asp.route-page="@Model.PagingInfo.CurrentPage"
                   asp-route-ascending="@( Model.PagingInfo.Sort ==1 ? !Model.PagingInfo.Ascending : true)">Identifikacijski broj</a>
            </th>
            <th>
                <a asp-route-sort="2"
                   asp.route-page="@Model.PagingInfo.CurrentPage"
                   asp-route-ascending="@( Model.PagingInfo.Sort ==2 ? !Model.PagingInfo.Ascending : true)">Ime</a>
            </th>
            <th>
                <a asp-route-sort="3"
                   asp.route-page="@Model.PagingInfo.CurrentPage"
                   asp-route-ascending="@( Model.PagingInfo.Sort ==3 ? !Model.PagingInfo.Ascending : true)">Prezime</a>
            </th>
            <th>
                <a asp-route-sort="4"
                   asp.route-page="@Model.PagingInfo.CurrentPage"
                   asp-route-ascending="@( Model.PagingInfo.Sort ==4 ? !Model.PagingInfo.Ascending : true)">Datum zaraze</a>
            </th>
            <th>
                <a asp-route-sort="5"
                   asp.route-page="@Model.PagingInfo.CurrentPage"
                   asp-route-ascending="@( Model.PagingInfo.Sort ==5 ? !Model.PagingInfo.Ascending : true)">Naziv stanja</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var zarazena in Model.ZarazeneOsobe)
        {
        <tr>
            <td class="text-left">@zarazena.IdentifikacijskiBroj</td>
            <td class="text-left">@zarazena.IdentifikacijskiBrojNavigation.Ime</td>
            <td class="text-left">@zarazena.IdentifikacijskiBrojNavigation.Prezime</td>
            <td class="text-left">@zarazena.DatZaraze</td>
            <td class="text-left">@zarazena.SifraStanjaNavigation.NazivStanja</td>

        </tr>
        }
    </tbody>
</table>

