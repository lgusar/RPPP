@model KoronavirusMvc.ViewModels.ZarazenaOsobaViewModel

    <tr>
        <td class="text-left">@Model.IdentifikacijskiBroj</td>
        <td class="text-left">@Model.Ime</td>
        <td class="text-left">@Model.Prezime</td>
        <td class="text-left">@Model.DatZaraze</td>
        <td class="text-left">@Model.NazivStanja</td>
        <td>
            <a class="btn btn-sm" title="Ažuriraj">
                <i class="fas fa-edit"></i>
            </a>
        </td>
        <td>
            <form asp-action="Delete" method="post">
                <input type="hidden" name="id" value="@Model.IdentifikacijskiBroj" />
                <button type="submit" class="btn btn-sm btn-danger" title="Obriši">
                    <i class="fas fa-trash-alt"></i>
                </button>
            </form>
        </td>
    </tr>
