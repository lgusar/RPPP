@model ZarazenaOsoba

@{
    ViewBag.Title = "Create";
}

<h2>Unos novozaražene osobe</h2>
<form asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
            <label asp-for="IdentifikacijskiBroj"></label>
            <div><span asp-validation-for="IdentifikacijskiBroj" class="text-danger"></span></div>
            <input asp-for="IdentifikacijskiBroj" class="form-control" />
        </div>
    <div class="form-group">
        <label asp-for="DatZaraze"></label>
        <div><span asp-validation-for="DatZaraze" class="text-danger"></span></div>
        <input asp-for="DatZaraze" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SifraStanja"></label>
        <div><span asp-validation-for="SifraStanja" class="text-danger"></span></div>
        <select class="form-control" asp-for="SifraStanja" asp-items="ViewBag.Stanja">
            <option selected value="" disabled>Odaberite stanje</option>
        </select>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Dodaj</button>
    </div>
    <div class="text-center">
        <a asp-action="Index" class="btn btn-secondary" type="button">Odustani</a>
    </div>
</form>

@section scripts{ 
<script src="~/lib/jqueryui/jquery-ui.js"></script>
<script src="~/js/autocomplete.js"></script>
}


